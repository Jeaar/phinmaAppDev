<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Phinma_Iloilo">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#00000000"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/phinma_iloilo"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="@drawable/gradient"
                android:scaleType="centerCrop"
                android:src="@drawable/phinma_iloilo" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:fontFamily="@font/myraid_regular"
        android:text="UNIVERSITY OF ILOILO"
        android:textColor="#333"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/card"
                android:columnCount="2"
                android:backgroundTint="#202c61"
                android:paddingHorizontal="10dp"
                android:rowCount="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="20dp"
                    app:cardBackgroundColor="#00000000"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/flex_logo" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="14dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/optima_b"
                    android:text="Flex Learning"
                    android:textColor="#ffffff "
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/myraid_regular"
                    android:text="â€œFlex learning is convenient, it pays respect to my personal time, leeway, co-curricular activities, and job opportunities. As a working student, it aids me to still conquer heights while working in my free time to support my study."
                    android:textColor="#ffffff "
                    android:textSize="15sp" />
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/card"
                android:columnCount="2"
                android:backgroundTint="#196F38"
                android:paddingHorizontal="10dp"
                android:rowCount="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="20dp"
                    app:cardBackgroundColor="#00000000"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/rad_logo" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/optima_b"
                    android:text="Rad learning"
                    android:textColor="#ffffff "
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/myraid_regular"
                    android:text="Remote and Distance (RAD) Learning is developed for students who live far and need to travel for hours to get to school."
                    android:textColor="#ffffff "
                    android:textSize="15sp" />
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/card"
                android:columnCount="2"
                android:backgroundTint="#FFD400"
                android:paddingHorizontal="10dp"
                android:rowCount="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="20dp"
                    app:cardBackgroundColor="#00000000"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/college_icon" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/optima_b"
                    android:text="College Programs"
                    android:textColor="#ffffff "
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/myraid_regular"
                    android:text="- College of Education"
                    android:textColor="#ffffff "
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="50dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/myraid_regular"
                    android:text="- College of Information Technology"
                    android:textColor="#ffffff "
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="70dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/myraid_regular"
                    android:text="- College of Education and Liberal Arts"
                    android:textColor="#ffffff "
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="90dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/myraid_regular"
                    android:text="- College of Management and Accountancy"
                    android:textColor="#ffffff "
                    android:textSize="15sp" />


            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/card"
                android:backgroundTint="#727273"
                android:columnCount="2"
                android:paddingHorizontal="10dp"
                android:rowCount="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="20dp"
                    app:cardBackgroundColor="#00000000"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/departments" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/optima_b"
                    android:text="Departments"
                    android:textColor="#ffffff "
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/myraid_regular"
                    android:text="- CITE"
                    android:textColor="#ffffff "
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="50dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/myraid_regular"
                    android:text="- CAS"
                    android:textColor="#ffffff "
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="70dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/myraid_regular"
                    android:text="- CMA"
                    android:textColor="#ffffff "
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="90dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/myraid_regular"
                    android:text="- CEA"
                    android:textColor="#ffffff "
                    android:textSize="15sp" />
            </GridLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/mapbtn"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="Map"
                    android:fontFamily="@font/optima_b"
                    android:textColor="@color/white"
                    android:background="@drawable/primarybtn"
                    android:layout_marginEnd="10dp" />

                <Button
                    android:id="@+id/scholarshipbtn"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="Scholarship"
                    android:textColor="@color/white"
                    android:fontFamily="@font/optima_b"
                    android:background="@drawable/primarybtn" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
