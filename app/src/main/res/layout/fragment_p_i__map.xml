<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".PI_Map">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phinma Iloilo University Map"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/myraid_regular"
                android:layout_gravity="center"
                android:paddingBottom="16dp"
                android:paddingTop="20dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/phinma_iloilo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phinma Iloilo Map"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/myraid_regular"
                android:layout_gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Here is the map of Phinma University of Iloilo. The university is located in Iloilo City, known for its rich cultural heritage and vibrant student life."
                android:textSize="16sp"
                android:fontFamily="@font/myraid_regular"
                android:textColor="@color/black"
                android:padding="20dp"
                android:paddingBottom="16dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/phinma_iloilo_map"
                android:contentDescription="Map of Phinma Iloilo"
                android:scaleType="centerInside" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrar Office"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/myraid_regular"
                android:layout_gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="20dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/iloilo_rigestrar"
                android:contentDescription="Registrar Office"
                android:scaleType="centerInside" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Computer Laboratory"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/myraid_regular"
                android:layout_gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="20dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/iloilo_comlab"
                android:contentDescription="Computer Laboratory"
                android:scaleType="centerInside" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
